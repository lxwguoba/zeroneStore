    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.38"
        android:gravity="center_vertical"
        android:text="加载更多中...."
        android:textColor="#ff0000"
        android:textSize="15sp" />
</LinearLayout>