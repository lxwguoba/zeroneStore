<?xml version="1.0" encoding="utf-8"?>
<!--卡片试布局-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="#11000000"
    android:layout_gravity="center_horizontal"
    >
<LinearLayout
    android:layout_height="wrap_content"
    android:background="@mipmap/icon_order_details_bg"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="订单详情"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#242429"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tablename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="桌位："
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="#ffc000"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/ordertime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下单时间："
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="#a4a4a4"
            android:textSize="14sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#f2f2f2"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/order_details_list_goods"
        android:layout_width="match_parent"
        android:divider="@null"
        android:scrollbars="none"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="150dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#f2f2f2"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="餐位费："
            android:textSize="14sp"
            android:textColor="#ff452a"
            />
        <TextView
            android:id="@+id/seale_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85.00"
            android:textSize="14sp"
            android:textColor="#ff452a"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单金额："
            android:textSize="14sp"
            android:textColor="#ff452a"
            />

        <TextView
            android:id="@+id/dingdanjine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="14sp"
            android:textColor="#ff452a"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="订单编号："
              android:textSize="14sp"
              android:textColor="#242429"
              />

            <TextView
                android:id="@+id/order_details_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20180103000"
                android:textSize="14sp"
                android:textColor="#242429"
                />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总金额："
            android:textSize="14sp"
            android:textColor="#ff452a"
            />
        <TextView
            android:id="@+id/order_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85.00"
            android:textSize="14sp"
            android:textColor="#ff452a"
            />

    </LinearLayout>
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:gravity="center_vertical"
         android:paddingLeft="25dp"
         android:paddingRight="25dp"
         >

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="折扣："
             android:textSize="14sp"
             android:textColor="#ffa800"
             />

         <EditText
             android:id="@+id/zhekou_edt"
             android:layout_width="0dp"
             android:layout_height="30dp"
             android:layout_weight="1"
             android:textColor="#ffa800"
             android:paddingLeft="10dp"
             android:textSize="14sp"
             android:background="@mipmap/icon_order_details_input_bg"
             />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:layout_weight="0.2"
             android:background="@mipmap/icon_order_details_sure_bg"
             android:text="确定"
             android:textSize="14sp"
             android:textColor="#ffffff"
             android:gravity="center"
             />
     </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="折后价：￥"
             android:textSize="18sp"
             android:textColor="#ff452a"
             />
            <TextView
            android:id="@+id/zhekou_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="88693.00"
            android:textSize="18sp"
            android:textColor="#ff452a"
            />
    </LinearLayout>
    <RelativeLayout
          android:id="@+id/sure_relative"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:paddingBottom="10dp">

          <Button
              android:id="@+id/sure_btn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@mipmap/icon_order_details_sure_pay_bg"
              android:text="确认付款"
              android:layout_centerInParent="true"
              android:textColor="#ffffff"

              />

      </RelativeLayout>

</LinearLayout>
</LinearLayout>