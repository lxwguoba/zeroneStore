<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shopCartMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:background="@mipmap/icon_shop_cart_bg"
    android:clipChildren="false"
    android:orientation="horizontal"
    android:paddingLeft="10dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:background="@mipmap/icon_goods_cart_bg"
        android:clipChildren="true" />

    <TextView
        android:id="@+id/shopCartNum"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="7dp"
        android:background="@mipmap/icon_goodscate_round_bg"
        android:gravity="center"
        android:padding="2dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="11sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/image"
        android:text="¥0"
        android:textColor="@color/color_red"
        android:textSize="26sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/noShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/image"
        android:text="购物车为空"
        android:textColor="#999999"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/goTOCheckOut"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/icon_goods_settlement_bg"
        android:paddingBottom="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="15dp"
        android:text="下单"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>